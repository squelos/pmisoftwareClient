        <TextBox HorizontalAlignment="Left" Height="23" Margin="67,192,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Controls:TextboxHelper.ClearTextButton="True" Grid.Column="1" />
        <TabControl Margin="0" TabStripPlacement="Left">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Menu Margin="0">
                        <MenuItem Header="Test"/>
                        <MenuItem Header="Test2"/>
                    </Menu>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
