<controls:MetroWindow x:Class="TcpDash.UI.VideoPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" WindowStyle="None" 
                      WindowState="Maximized"
                      Margin="10,10,10,10" WindowStartupLocation="Manual"
                      BorderBrush="OrangeRed" BorderThickness="1" IgnoreTaskbarOnMaximize="True"
        Title="VideoPlayer" Height="300" Width="300"
        DataContext="{Binding Source={StaticResource Locator }, Path=Main}" Topmost="True">
    <Grid>
        <MediaElement x:Name="MediaElem" Source="{Binding VideoViewModel }" SourceUpdated="MediaElem_OnSourceUpdated">
            
        </MediaElement>
    </Grid>
</controls:MetroWindow>
